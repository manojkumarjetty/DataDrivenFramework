package com.disuite.test.thoughtspot;

import java.awt.AWTException;
import java.util.Hashtable;

import org.testng.SkipException;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.DataProvider;
import org.testng.annotations.Test;

import com.disuite.base.BaseClass;
import com.disuite.pages.thoughtspot.JdbcConnectionMethods;
import com.disuite.util.TestUtil;

public class JdbcDataFlowCreationTest {
	@Test(dataProvider = "getData")
	public void jdbcDfCreationTest(Hashtable<String, String> data) throws InterruptedException, AWTException {

		// check the run mode of test case
		if (!TestUtil.isExecutable("JDBCConnection", BaseClass.xls1)) {
			throw new SkipException("Runmode set to NO");
		}

		// check runmode for data set
		if (!data.get("Runmode").equals("Y")) {
			throw new SkipException("Test Case Data Set Runmode is no.");
		}

		JdbcConnectionMethods hm = new JdbcConnectionMethods();
		hm.createJdbcConnection(data.get("ConnectionName"), data.get("SelectValue"), data.get("DriverName"),data.get("JDBCUrl"), 
				data.get("JDBCDriverJar"), data.get("Username"), data.get("Password"), data.get("DBtype"),
				data.get("Dbname"), data.get("AddTableSync"), data.get("TsTable"), data.get("schEncChar"), data.get("ExtractType"), data.get("ExtractionMode"));
	}

	@DataProvider
	public Object[][] getData() {
		return TestUtil.getData("JDBCConnection", BaseClass.xls1);
	}

	
	@AfterMethod 
	public void tearDown() throws Exception {
		BaseClass.closeBrowser(); 
	  }

}
